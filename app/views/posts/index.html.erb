<h1>Posts</h1>

<table class="table table-condensed">
	<thead>
		<tr>
			<th>
				#
			</th>
			<th>
				Date
			</th>
			<th>
				User
			</th>
			<th>
				Rationale
			</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |p| %>
		<tr>
			<td>
				<%= p.id %>
			</td>
			<td>
				<%= p.date %>
			</td>
			<td>
				<%= p.user.last_name %>
			</td>
			<td>
				<%= truncate(p.rationale) %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>